{ 
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES6",
    // "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "rootDirs": ["src", "tests"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
     "paths" : { 
      "@/tests/*": ["../tests/*"],
      "@/*": ["./src/*"]
    }
  },
}